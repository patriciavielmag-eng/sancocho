---
import Layout from '../layouts/Layout.astro';

const projects = [
    { title: 'Caf√© del Monte', category: 'Branding', img: 'brand', bg: 'bg-menu-1' },
    { title: 'Neon Nights', category: 'Motion', img: 'motion', bg: 'bg-menu-6 text-white' },
    { title: 'EcoStore', category: 'Web', img: 'web', bg: 'bg-menu-3' },
    { title: 'Tropical Vibes', category: 'Merch', img: 'merch', bg: 'bg-menu-5' },
    { title: 'Tech Start', category: 'Branding', img: 'brand2', bg: 'bg-menu-4' },
    { title: 'Urban Flow', category: 'Content', img: 'content', bg: 'bg-menu-2' },
];
---

<Layout title="Portafolio | Sancocho">
	<main class="pt-32 pb-20 px-4">
		<div class="w-[80%] mx-auto">
            <h1 class="text-6xl md:text-9xl font-serif text-center mb-8 leading-none">
                Obras <br/><span class="italic text-brand-orange text-5xl md:text-7xl align-top">Maestras</span>
            </h1>

            <div class="flex justify-center gap-4 mb-20 flex-wrap">
                {['Todos', 'Branding', 'Web', 'Motion', 'Content'].map(cat => (
                    <button class="px-6 py-2 rounded-full border border-zinc-900 hover:bg-zinc-900 hover:text-white transition-colors uppercase text-sm tracking-widest font-bold">
                        {cat}
                    </button>
                ))}
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                {projects.map(project => (
                    <div class={`group rounded-[2rem] p-8 aspect-[4/5] flex flex-col justify-between transition-transform hover:-translate-y-2 relative overflow-hidden ${project.bg}`}>
                        <div class="absolute top-4 right-4 bg-white/20 backdrop-blur px-3 py-1 rounded-full text-xs font-bold uppercase tracking-widest border border-white/10">
                            {project.category}
                        </div>
                        
                        <div class="mt-auto">
                             <h3 class="text-4xl font-serif leading-none mb-2 transform translate-y-4 opacity-0 group-hover:translate-y-0 group-hover:opacity-100 transition-all duration-500">
                                {project.title}
                            </h3>
                             <a href="#" class="inline-block border-b border-current pb-1 text-sm font-bold uppercase tracking-widest transform translate-y-4 opacity-0 group-hover:translate-y-0 group-hover:opacity-100 transition-all duration-700 delay-100">
                                Ver Caso
                            </a>
                        </div>
                        
                         <!-- decorative circles -->
                        <div class="absolute -top-20 -right-20 w-64 h-64 rounded-full bg-white/10 blur-3xl group-hover:bg-white/20 transition-colors"></div>
                    </div>
                ))}
            </div>
		</div>
	</main>
</Layout>
