---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Contacto | Sancocho">
    <main class="pt-32 pb-20 px-4 min-h-screen bg-brand-orange text-white">
        <div class="w-[80%] mx-auto">
            <div class="text-center mb-16">
                <h1 class="text-6xl md:text-8xl font-serif mb-6">Hablemos</h1>
                <p
                    class="text-xl md:text-2xl font-light max-w-xl mx-auto opacity-90"
                >
                    Cuéntanos tu idea. Si tienes un proyecto en mente o
                    simplemente quieres decir hola.
                </p>
            </div>

            <form
                class="bg-white text-zinc-900 rounded-[3rem] p-8 md:p-12 shadow-2xl"
            >
                <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-8">
                    <div class="space-y-2">
                        <label
                            for="name"
                            class="font-bold uppercase text-xs tracking-widest pl-4"
                            >Nombre</label
                        >
                        <input
                            type="text"
                            id="name"
                            placeholder="Tu nombre"
                            class="w-full bg-menu-1 rounded-2xl px-6 py-4 border-none focus:ring-2 focus:ring-brand-orange outline-none transition-shadow placeholder-zinc-400"
                        />
                    </div>
                    <div class="space-y-2">
                        <label
                            for="email"
                            class="font-bold uppercase text-xs tracking-widest pl-4"
                            >Email</label
                        >
                        <input
                            type="email"
                            id="email"
                            placeholder="tu@email.com"
                            class="w-full bg-menu-1 rounded-2xl px-6 py-4 border-none focus:ring-2 focus:ring-brand-orange outline-none transition-shadow placeholder-zinc-400"
                        />
                    </div>
                </div>

                <div class="space-y-2 mb-8">
                    <label
                        for="service"
                        class="font-bold uppercase text-xs tracking-widest pl-4"
                        >Servicio de interés</label
                    >
                    <select
                        id="service"
                        class="w-full bg-menu-1 rounded-2xl px-6 py-4 border-none focus:ring-2 focus:ring-brand-orange outline-none transition-shadow text-zinc-900 appearance-none"
                    >
                        <option value="" disabled selected
                            >Selecciona un servicio</option
                        >
                        <option value="branding">Diseño & Marca</option>
                        <option value="web">Web Plans</option>
                        <option value="3d">3D & Motion</option>
                        <option value="content">Creación de Content</option>
                    </select>
                </div>

                <div class="space-y-2 mb-12">
                    <label
                        for="message"
                        class="font-bold uppercase text-xs tracking-widest pl-4"
                        >Mensaje</label
                    >
                    <textarea
                        id="message"
                        rows="5"
                        placeholder="Cuéntanos más sobre tu proyecto..."
                        class="w-full bg-menu-1 rounded-2xl px-6 py-4 border-none focus:ring-2 focus:ring-brand-orange outline-none transition-shadow placeholder-zinc-400 resize-none"
                    ></textarea>
                </div>

                <button
                    type="submit"
                    class="w-full bg-zinc-900 text-white py-6 rounded-full font-bold text-xl hover:bg-brand-orange hover:text-black transition-all"
                >
                    Enviar Mensaje
                </button>
            </form>

            <div
                class="mt-16 flex flex-col md:flex-row justify-between items-center text-sm font-medium opacity-80 border-t border-white/20 pt-8"
            >
                <p>hola@sancocho.studio</p>
                <p>+34 600 000 000</p>
                <p>Madrid, España</p>
            </div>
        </div>
    </main>
</Layout>
