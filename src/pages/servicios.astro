---
import Layout from "../layouts/Layout.astro";

const services = [
    {
        id: "diseno",
        title: "Diseño & Marca",
        description:
            "Construimos identidades visuales que cuentan historias y conectan con audiencias. Desde el logotipo hasta el sistema visual completo.",
        items: ["Branding", "Identidad Visual", "Rebranding", "Guidelines"],
        bg: "bg-menu-1",
    },
    {
        id: "3d",
        title: "3D & Motion",
        description:
            "Damos vida a tus ideas con movimiento y volumen. Animaciones que atrapan y renderizados hiperrealistas.",
        items: [
            "Modelado 3D",
            "Motion Graphics",
            "Animación de Personajes",
            "VFX",
        ],
        bg: "bg-menu-2",
    },
    {
        id: "web",
        title: "Web Plans",
        description:
            "Sitios web rápidos, bellos y funcionales. Desarrollamos experiencias digitales que convierten visitantes en clientes.",
        items: ["Landing Pages", "E-commerce", "Portfolios", "Web Apps"],
        bg: "bg-menu-3",
    },
    {
        id: "content",
        title: "Creación de Content",
        description:
            "Contenido estratégico para tus redes sociales. Fotografía, video y copy que engancha.",
        items: [
            "Fotografía de Producto",
            "Reels & TikToks",
            "Copywriting",
            "Estrategia de Contenido",
        ],
        bg: "bg-menu-4",
    },
];
---

<Layout title="Servicios | Sancocho">
    <main class="pt-32 pb-20 px-4">
        <div class="w-[80%] mx-auto">
            <h1 class="text-6xl md:text-8xl font-serif text-center mb-20">
                Nuestros <span class="italic text-brand-orange">Sabores</span>
            </h1>

            <div class="space-y-32">
                {
                    services.map((service, index) => (
                        <div
                            id={service.id}
                            class={`flex flex-col md:flex-row items-center gap-12 ${index % 2 === 1 ? "md:flex-row-reverse" : ""}`}
                        >
                            <div class="flex-1 w-full">
                                <div
                                    class={`aspect-square rounded-[3rem] ${service.bg} relative overflow-hidden group`}
                                >
                                    <div class="absolute inset-0 flex items-center justify-center opacity-20 text-[15rem] font-black tracking-tighter mix-blend-overlay">
                                        {index + 1}
                                    </div>
                                    <div class="absolute inset-0 bg-black/5 group-hover:bg-transparent transition-colors" />
                                </div>
                            </div>
                            <div class="flex-1 w-full">
                                <h2 class="text-5xl font-bold mb-6 tracking-tight leading-none">
                                    {service.title}
                                </h2>
                                <p class="text-xl opacity-80 mb-8 font-light leading-relaxed">
                                    {service.description}
                                </p>
                                <ul class="grid grid-cols-2 gap-4">
                                    {service.items.map((item) => (
                                        <li class="flex items-center gap-3 border-b border-black/10 pb-2">
                                            <span class="text-brand-orange text-xl">
                                                ❋
                                            </span>
                                            <span class="font-medium">
                                                {item}
                                            </span>
                                        </li>
                                    ))}
                                </ul>
                            </div>
                        </div>
                    ))
                }
            </div>

            <div class="mt-32 text-center">
                <a
                    href={import.meta.env.BASE_URL + "contacto"}
                    class="inline-block px-12 py-6 bg-zinc-900 text-white rounded-full font-bold text-2xl hover:bg-brand-orange hover:text-black transition-all transform hover:scale-105"
                >
                    Cotizar Proyecto
                </a>
            </div>
        </div>
    </main>
</Layout>
